</div>
<div class="col-md-12">
    <% @companies.each do |company| %>
      <div class="card mt-4 p-2 col">
        <p><%= company.name %></p>
        <p><%= link_to 'Show', company %></p>
        <p><%= link_to 'Edit', edit_company_path(company) %></p>
        <p><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      </div>
    <% end %>
</div>
