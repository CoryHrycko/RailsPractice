       <div>Name
      </div>
        <div>
          Search
<!--        s-->
          <%= form_tag(companies_path, :method => "get", id: "search-form") do %>
            <%= text_field_tag :term, params[:term], placeholder: "Search Companies" %>
            <%= submit_tag "Search", name: nil %>
          <% end %>
          <% if @companies.name.present? %>
            <%= render @companies.name %>
          <% else %>
            <p>There are no Companies containing the term(s) <%= params[:term] %>.</p>
          <% end %>


